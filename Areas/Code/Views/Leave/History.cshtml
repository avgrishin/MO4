@model IEnumerable<MO.Areas.Code.Models.LeaveViewModel>
@{
  Layout = "_Layout.cshtml";
}

<div class="container-fluid">
  <h2>@ViewBag.Title</h2>
  @{MO.Areas.Code.Models.HistoryParamVM a = ViewBag.histParam;
  }
  <div class="table-responsive">
    <table id="tbl1" class="table table-hover table-condensed">
      <thead>
        <tr class="active">
          <td>@Html.Partial("_SmartLink", new ViewDataDictionary { { "ColumnName", "DateB" }, { "DisplayName", Html.DisplayNameFor(m => m.DateB).ToHtmlString() }, { "Sort", a.Sort }, { "Dir", a.Dir } })</td>
          <td>@Html.Partial("_SmartLink", new ViewDataDictionary { { "ColumnName", "DateE" }, { "DisplayName", Html.DisplayNameFor(m => m.DateE).ToHtmlString() }, { "Sort", a.Sort }, { "Dir", a.Dir } })</td>
          <td>@Html.Partial("_SmartLink", new ViewDataDictionary { { "ColumnName", "Days" }, { "DisplayName", Html.DisplayNameFor(m => m.Days).ToHtmlString() }, { "Sort", a.Sort }, { "Dir", a.Dir } })</td>
          <td>@Html.Partial("_SmartLink", new ViewDataDictionary { { "ColumnName", "TypeName" }, { "DisplayName", Html.DisplayNameFor(m => m.TypeName).ToHtmlString() }, { "Sort", a.Sort }, { "Dir", a.Dir } })</td>
          <td>@Html.Partial("_SmartLink", new ViewDataDictionary { { "ColumnName", "Name2" }, { "DisplayName", "Обязанности возлагаются на" }, { "Sort", a.Sort }, { "Dir", a.Dir } })</td>
          <td>@Html.Partial("_SmartLink", new ViewDataDictionary { { "ColumnName", "Name4" }, { "DisplayName", "Согласователь 1" }, { "Sort", a.Sort }, { "Dir", a.Dir } })</td>
          <td>@Html.Partial("_SmartLink", new ViewDataDictionary { { "ColumnName", "Name5" }, { "DisplayName", "Согласователь 2" }, { "Sort", a.Sort }, { "Dir", a.Dir } })</td>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
          <tr data-id="@Html.DisplayFor(model => item.DateB)">
            <td>@Html.DisplayFor(model => item.DateB)</td>
            <td>@Html.DisplayFor(model => item.DateE)</td>
            <td>@Html.DisplayFor(model => item.Days)</td>
            <td>@Html.DisplayFor(model => item.TypeName)</td>
            <td>@Html.DisplayFor(model => item.Name2)</td>
            <td>@Html.DisplayFor(model => item.Name4)
              @if (item.Sign4 != null)
              {
                <br />
                <small class="text-muted">@Html.DisplayFor(model => item.Sign4)</small>
              }
            </td>
            <td>@Html.DisplayFor(model => item.Name5)
              @if (item.Sign5 != null)
              {
                <br />
                <small class="text-muted">@Html.DisplayFor(model => item.Sign5)</small>
              }
            </td>

          </tr>
        }
      </tbody>
    </table>
  </div>
</div>

@section css {
  <style>
    .form-control-static {
      color: green;
    }
  </style>
}
