<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>@ViewBag.Title</title>
  @Styles.Render("~/Content/bootstrap")
  <style>
    @@font-face {
      font-family: 'Segoe UI Light';
      src: url('/fonts/segoe-ui/cyrillic/light/latest.eot');
      src: url('/fonts/segoe-ui/cyrillic/light/latest.eot?#iefix') format('embedded-opentype'), url('/fonts/segoe-ui/cyrillic/light/latest.woff') format('woff'), url('/fonts/segoe-ui/cyrillic/light/latest.ttf') format('truetype'), url('http://i.s-microsoft.com/fonts/segoe-ui/cyrillic/light/latest.svg#web') format('svg');
      font-weight: 100;
      font-style: normal;
    }

    html, body, h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
      font-family: "Segoe UI", Verdana,Arial,Helvetica,sans-serif;
    }

    h1, h2 {
      font-family: "Segoe UI Light";
      /*margin-top: 10px;*/
    }

    label {
      font-weight: normal;
    }

    .form-control {
      border-radius: 0;
      box-shadow: none;
    }

    .btn {
      border-radius: 0;
    }

    .input-validation-error {
      border-color: #a94442;
      -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
      box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    }

      .input-validation-error:focus {
        border-color: #843534;
        -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 6px #ce8483;
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 6px #ce8483;
      }

    .div-head {
      background-color: #337ab7;
      border-bottom: 3px solid #fbd91f;
      color: white;
    }
  </style>
  @RenderSection("css", required: false)
</head>
<body>
  <div style="padding-bottom: 3px; background-color: #77ab60">
    <div class="div-head" style="">
      <div class="container">
        <div class="row">
          <div class="col-sm-3 col-xs-6">
            <div class="navbar-brand" style="height: 72px;">
              <a href="//am.uralsib.ru" title="УК УРАЛСИБ">
                <img alt="" src="~/Content/images/logo3.png" />
              </a>
            </div>
          </div>
          <div class="col-sm-6 hidden-xs text-center"></div>
          <div class="col-sm-3 col-xs-6 navbar-brand text-right" style="margin-top:10px;">
            @{
              var n = System.DirectoryServices.AccountManagement.UserPrincipal.FindByIdentity(new System.DirectoryServices.AccountManagement.PrincipalContext(System.DirectoryServices.AccountManagement.ContextType.Domain), User.Identity.Name);
              if(n != null)
              {
                <small>@n.Name</small>
              }
            }
          </div>
        </div>
      </div>
    </div>
  </div>
  @RenderBody()
  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/bundles/jqueryui")
  @Scripts.Render("~/bundles/bootstrap")
  @RenderSection("scripts", required: false)
</body>
</html>
